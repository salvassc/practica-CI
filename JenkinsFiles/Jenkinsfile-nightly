pipeline {
    agent any
    stages {
        stage("Build project") {
            steps {
                sh "mvn clean package -DskipTests"
            }
        }
        stage("Unitary Test") {
            steps {
                sh "mvn -Dtest=UnitaryTest test"
            }
        }
        stage("E2E Test") {
            steps {
                sh "mvn -Dtest=SeleniumTest test"
            }
        }
        stage("Code quality"){
            steps {
                sh "mvn verify -DskipTests sonar:sonar"
            }
        }
        stage("Deploy nexus"){
            steps {
                script {
                    nexusPublisher nexusInstanceId: 'localNexus', nexusRepositoryId: 'mvn-releases', packages: [[$class: 'MavenPackage', mavenAssetList: [[classifier: '', extension: '', filePath: 'target/practica-CI-1.0.0-SNAPSHOT.jar']], mavenCoordinate: [artifactId: 'practica-CI', groupId: 'es.urjc.code', packaging: 'jar', version: '1.0.0']]]
                }
                
            }
        }
    }
    post {
        always {
            junit "target/surefire-reports/TEST-*.xml"
        }
    }
}