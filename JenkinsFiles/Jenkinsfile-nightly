pipeline {
    agent any
    stages {
        stage("Build project") {
            steps {
                sh "mvn clean package -DskipTests"
            }
        }
        stage("Unitary Test") {
            steps {
                sh "mvn -Dtest=UnitaryTest test"
            }
        }
        stage("E2E Test") {
            steps {
                sh "mvn -Dtest=SeleniumTest test"
            }
        }
        stage("Code quality"){
            steps {
                sh "mvn verify -DskipTests sonar:sonar"
            }
        }
        stage("Deploy nexus"){
            steps {
                script {
                    version=mvn -q -Dexec.executable="echo" -Dexec.args='${project.version}' --non-recursive org.codehaus.mojo:exec-maven-plugin:1.3.1:exec)-nightly
                    echo $version
                    nexusPublisher nexusInstanceId: 'localNexus', nexusRepositoryId: 'mvn-snapshots', packages: [[$class: 'MavenPackage', mavenAssetList: [[classifier: '', extension: '', filePath: 'target/practica-CI-1.0.0-SNAPSHOT.jar']], mavenCoordinate: [artifactId: 'practica-CI', groupId: 'es.urjc.code', packaging: 'jar', version: '${version}']]]
                }          
            }
        }
    }
    post {
        always {
            junit "target/surefire-reports/TEST-*.xml"
        }
    }
}